<!-- Services Section -->
<section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Professional Services</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Comprehensive solutions combining educational expertise with cutting-edge technology
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <% services.forEach(service => { %>
            <div class="bg-white p-6 rounded-lg shadow-md card-hover">
                <div class="text-4xl mb-4"><%= service.icon %></div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= service.title %></h3>
                <p class="text-gray-600 mb-4"><%= service.description %></p>
                <a href="/services" class="text-blue-600 font-semibold hover:text-blue-700 transition-colors">
                    Learn More →
                </a>
            </div>
            <% }) %>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Technical Expertise</h2>
            <p class="text-lg text-gray-600">
                Proficient in multiple programming languages and specialized domains
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <% skills.forEach(skill => { %>
            <div class="mb-6">
                <div class="flex justify-between items-center mb-2">
                    <span class="text-lg font-semibold text-gray-900"><%= skill.name %></span>
                    <span class="text-sm text-gray-600"><%= skill.category %></span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-3">
                    <div class="skill-bar bg-gradient-to-r from-blue-500 to-purple-600 h-3 rounded-full" 
                         style="width: <%= skill.level %>%"></div>
                </div>
                <div class="text-right text-sm text-gray-500 mt-1"><%= skill.level %>%</div>
            </div>
            <% }) %>
        </div>
    </div>
</section>

<!-- Recent Blog Posts -->
<% if (recentPosts && recentPosts.length > 0) { %>
<section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Latest Insights</h2>
            <p class="text-lg text-gray-600">
                Sharing knowledge and expertise in technology and education
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <% recentPosts.forEach(post => { %>
            <article class="bg-white rounded-lg shadow-md overflow-hidden card-hover">
                <% if (post.featuredImage) { %>
                <img src="<%= post.featuredImage %>" alt="<%= post.title %>" class="w-full h-48 object-cover">
                <% } else { %>
                <div class="w-full h-48 bg-gradient-to-br from-blue-400 to-purple-500"></div>
                <% } %>
                <div class="p-6">
                    <div class="text-sm text-blue-600 font-semibold mb-2"><%= post.category %></div>
                    <h3 class="text-xl font-bold text-gray-900 mb-3">
                        <a href="/blog/<%= post.slug %>" class="hover:text-blue-600 transition-colors">
                            <%= post.title %>
                        </a>
                    </h3>
                    <p class="text-gray-600 mb-4"><%= post.excerpt %></p>
                    <div class="flex justify-between items-center text-sm text-gray-500">
                        <span><%= new Date(post.createdAt).toLocaleDateString() %></span>
                        <a href="/blog/<%= post.slug %>" class="text-blue-600 hover:text-blue-700 transition-colors">
                            Read More →
                        </a>
                    </div>
                </div>
            </article>
            <% }) %>
        </div>
        
        <div class="text-center mt-8">
            <a href="/blog" class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                View All Posts
            </a>
        </div>
    </div>
</section>
<% } %>

