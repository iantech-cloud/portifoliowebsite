<% layout('layout') -%>

<!-- Hero Section -->
<section class="bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-700 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div>
                <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
                    Educational Technology & 
                    <span class="text-yellow-300">Data Science</span> Expert
                </h1>
                <p class="text-xl mb-8 text-blue-100">
                    Bachelor of Education (Science) graduate and Director of Goldmine Agencies. 
                    Specializing in innovative educational solutions, advanced data analytics, 
                    and comprehensive digital strategies.
                </p>
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="/contact" class="bg-yellow-400 text-gray-900 px-8 py-3 rounded-lg font-semibold hover:bg-yellow-300 transition-colors text-center">
                        Hire Me
                    </a>
                    <a href="/portfolio" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-gray-900 transition-colors text-center">
                        View Portfolio
                    </a>
                </div>
            </div>
            <div class="relative">
                <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8">
                    <div class="grid grid-cols-2 gap-6">
                        <div class="text-center">
                            <div class="text-3xl font-bold text-yellow-300">2+</div>
                            <div class="text-sm text-blue-100">Years Experience</div>
                        </div>
                        <div class="text-center">
                            <div class="text-3xl font-bold text-yellow-300">50+</div>
                            <div class="text-sm text-blue-100">Projects Completed</div>
                        </div>
                        <div class="text-center">
                            <div class="text-3xl font-bold text-yellow-300">100%</div>
                            <div class="text-sm text-blue-100">Client Satisfaction</div>
                        </div>
                        <div class="text-center">
                            <div class="text-3xl font-bold text-yellow-300">24/7</div>
                            <div class="text-sm text-blue-100">Support Available</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div>
                <img src="/images/profile.jpg" alt="Director, Goldmine Agencies" class="rounded-2xl shadow-2xl w-full max-w-md mx-auto">
            </div>
            <div>
                <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900">
                    About <span class="text-blue-600">Goldmine Agencies</span>
                </h2>
                <p class="text-lg text-gray-600 mb-6">
                    As a Bachelor of Education (Science) graduate from 2022 and Director of Goldmine Agencies 
                    for over 2 years, I bring a unique blend of educational expertise and technological innovation 
                    to every project.
                </p>
                <div class="space-y-4 mb-8">
                    <div class="flex items-center">
                        <i class="fas fa-graduation-cap text-blue-600 text-xl mr-4"></i>
                        <span class="text-gray-700">Bachelor of Education (Science) - 2022</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-briefcase text-blue-600 text-xl mr-4"></i>
                        <span class="text-gray-700">Director, Goldmine Agencies (2+ years)</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-shield-alt text-blue-600 text-xl mr-4"></i>
                        <span class="text-gray-700">Currently studying Cybersecurity</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-code text-blue-600 text-xl mr-4"></i>
                        <span class="text-gray-700">Expert in Python, PHP, JavaScript, C++</span>
                    </div>
                </div>
                <a href="/about" class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                    Learn More About Me
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">Professional Services</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Comprehensive solutions in educational technology, data science, digital marketing, 
                and cybersecurity tailored to your specific needs.
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <% services.forEach(service => { %>
            <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
                <div class="text-center mb-4">
                    <i class="fas fa-<%= service.icon %> text-4xl text-blue-600 mb-4"></i>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= service.title %></h3>
                    <p class="text-gray-600 text-sm"><%= service.description %></p>
                </div>
                <ul class="space-y-2 mb-6">
                    <% service.features.forEach(feature => { %>
                    <li class="flex items-center text-sm text-gray-600">
                        <i class="fas fa-check text-green-500 mr-2"></i>
                        <%= feature %>
                    </li>
                    <% }) %>
                </ul>
                <a href="/services#<%= service.title.toLowerCase().replace(/\s+/g, '-') %>" 
                   class="block text-center bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition-colors">
                    Learn More
                </a>
            </div>
            <% }) %>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">Technical Expertise</h2>
            <p class="text-xl text-gray-600">
                Proficient in cutting-edge technologies and methodologies
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% skills.forEach(skill => { %>
            <div class="bg-gray-50 rounded-lg p-6">
                <div class="flex justify-between items-center mb-2">
                    <span class="font-semibold text-gray-900"><%= skill.name %></span>
                    <span class="text-sm text-gray-600"><%= skill.level %>%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-blue-600 h-2 rounded-full transition-all duration-1000" 
                         style="width: <%= skill.level %>%"></div>
                </div>
                <span class="text-xs text-gray-500 mt-1 block"><%= skill.category %></span>
            </div>
            <% }) %>
        </div>
    </div>
</section>

<!-- Recent Blog Posts -->
<% if (recentPosts.length > 0) { %>
<section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">Latest Insights</h2>
            <p class="text-xl text-gray-600">
                Stay updated with the latest trends in technology and education
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <% recentPosts.forEach(post => { %>
            <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                <% if (post.featuredImage) { %>
                <img src="<%= post.featuredImage %>" alt="<%= post.title %>" class="w-full h-48 object-cover">
                <% } else { %>
                <div class="w-full h-48 bg-gradient-to-br from-blue-500 to-purple-600"></div>
                <% } %>
                <div class="p-6">
                    <div class="flex items-center text-sm text-gray-500 mb-2">
                        <time datetime="<%= post.publishedAt %>">
                            <%= new Date(post.publishedAt).toLocaleDateString('en-US', { 
                                year: 'numeric', 
                                month: 'long', 
                                day: 'numeric' 
                            }) %>
                        </time>
                        <span class="mx-2">•</span>
                        <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">
                            <%= post.category %>
                        </span>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">
                        <a href="/blog/<%= post.slug %>" class="hover:text-blue-600 transition-colors">
                            <%= post.title %>
                        </a>
                    </h3>
                    <p class="text-gray-600 mb-4"><%= post.excerpt %></p>
                    <a href="/blog/<%= post.slug %>" class="text-blue-600 font-semibold hover:text-blue-700 transition-colors">
                        Read More →
                    </a>
                </div>
            </article>
            <% }) %>
        </div>
        
        <div class="text-center mt-12">
            <a href="/blog" class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                View All Posts
            </a>
        </div>
    </div>
</section>
<% } %>

