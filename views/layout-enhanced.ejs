<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <meta name="description" content="Professional portfolio showcasing skills in development, data science, and cybersecurity">
    <meta name="keywords" content="portfolio, developer, data science, cybersecurity, python, php, mysql">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= process.env.SITE_URL || 'https://yourdomain.com' %>">
    <meta property="og:title" content="<%= title %>">
    <meta property="og:description" content="Professional portfolio showcasing skills in development, data science, and cybersecurity">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="<%= process.env.SITE_URL || 'https://yourdomain.com' %>">
    <meta property="twitter:title" content="<%= title %>">
    <meta property="twitter:description" content="Professional portfolio showcasing skills in development, data science, and cybersecurity">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    
    <!-- Stylesheets -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/hamburger-menu.css">
    
    <!-- Custom Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3b82f6',
                        secondary: '#6366f1'
                    }
                }
            }
        }
    </script>
</head>
<body class="<%= pageClass || '' %>">
    <!-- Navigation -->
    <%- include('partials/navigation-enhanced') %>
    
    <!-- Flash Messages -->
    <% if (messages.success && messages.success.length > 0) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 mx-4 mt-4">
            <% messages.success.forEach(function(message) { %>
                <p><%= message %></p>
            <% }); %>
        </div>
    <% } %>
    
    <% if (messages.error && messages.error.length > 0) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 mx-4 mt-4">
            <% messages.error.forEach(function(message) { %>
                <p><%= message %></p>
            <% }); %>
        </div>
    <% } %>
    
    <!-- Main Content -->
    <main>
        <%- body %>
    </main>
    
    <!-- Footer -->
    <%- include('partials/footer') %>
    
    <!-- Scripts -->
    <script src="/js/main.js"></script>
    <script src="/js/hamburger-menu.js"></script>
    
    <!-- Initialize menu with current path -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (window.HamburgerMenu) {
                window.HamburgerMenu.updateActiveItem('<%= currentPath %>');
            }
        });
    </script>
</body>
</html>
