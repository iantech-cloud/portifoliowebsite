<header class="sticky top-0 z-50 w-full border-b bg-white/95 backdrop-blur shadow-sm">
    <div class="max-w-6xl mx-auto flex h-16 items-center justify-between px-4">
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-2">
            <span class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                Portfolio
            </span>
        </a>

        <!-- Desktop Navigation -->
        <nav class="desktop-nav">
            <a href="/" class="desktop-nav-item <%= currentPath === '/' ? 'active' : '' %>">Home</a>
            <a href="/about" class="desktop-nav-item <%= currentPath === '/about' ? 'active' : '' %>">About</a>
            <a href="/skills" class="desktop-nav-item <%= currentPath === '/skills' ? 'active' : '' %>">Skills</a>
            <a href="/portfolio" class="desktop-nav-item <%= currentPath === '/portfolio' ? 'active' : '' %>">Portfolio</a>
            <a href="/achievements" class="desktop-nav-item <%= currentPath === '/achievements' ? 'active' : '' %>">Achievements</a>
            <a href="/blog" class="desktop-nav-item <%= currentPath.startsWith('/blog') ? 'active' : '' %>">Blog</a>
            <a href="/contact" class="desktop-nav-item <%= currentPath === '/contact' ? 'active' : '' %>">Contact</a>
        </nav>

        <!-- Hamburger Menu Button -->
        <button class="hamburger-menu" aria-label="Toggle navigation menu" aria-expanded="false">
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
        </button>
    </div>

    <!-- Mobile Navigation Overlay -->
    <div class="mobile-nav-overlay"></div>

    <!-- Mobile Navigation Menu -->
    <nav class="mobile-nav-menu" role="navigation" aria-label="Mobile navigation">
        <!-- Close Button -->
        <button class="mobile-nav-close" aria-label="Close navigation menu"></button>
        
        <!-- Navigation Items -->
        <div class="mobile-nav-items">
            <a href="/" class="mobile-nav-item <%= currentPath === '/' ? 'active' : '' %>">
                Home
            </a>
            <a href="/about" class="mobile-nav-item <%= currentPath === '/about' ? 'active' : '' %>">
                About
            </a>
            <a href="/skills" class="mobile-nav-item <%= currentPath === '/skills' ? 'active' : '' %>">
                Skills
            </a>
            <a href="/portfolio" class="mobile-nav-item <%= currentPath === '/portfolio' ? 'active' : '' %>">
                Portfolio
            </a>
            <a href="/achievements" class="mobile-nav-item <%= currentPath === '/achievements' ? 'active' : '' %>">
                Achievements
            </a>
            <a href="/blog" class="mobile-nav-item <%= currentPath.startsWith('/blog') ? 'active' : '' %>">
                Blog
            </a>
            <a href="/contact" class="mobile-nav-item <%= currentPath === '/contact' ? 'active' : '' %>">
                Contact
            </a>
        </div>

        <!-- Contact Information -->
        <div class="mobile-nav-contact">
            <h4>Get In Touch</h4>
            <div class="mobile-contact-item">
                <i class="fas fa-envelope"></i>
                <span>your.email@example.com</span>
            </div>
            <div class="mobile-contact-item">
                <i class="fas fa-phone"></i>
                <span>+1 (555) 123-4567</span>
            </div>
            <div class="mobile-contact-item">
                <i class="fas fa-map-marker-alt"></i>
                <span>Your City, Country</span>
            </div>
        </div>
    </nav>
</header>
