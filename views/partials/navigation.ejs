<header class="sticky top-0 z-50 w-full border-b bg-white/95 backdrop-blur shadow-sm">
    <div class="max-w-6xl mx-auto flex h-16 items-center justify-between px-4">
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-2">
            <span class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                Portfolio
            </span>
        </a>

        <!-- Desktop Navigation -->
        <nav class="hidden md:flex items-center space-x-6">
            <a href="/" class="nav-link <%= currentPath === '/' ? 'active' : '' %>">Home</a>
            <a href="/about" class="nav-link <%= currentPath === '/about' ? 'active' : '' %>">About</a>
            <a href="/skills" class="nav-link <%= currentPath === '/skills' ? 'active' : '' %>">Skills</a>
            <a href="/portfolio" class="nav-link <%= currentPath === '/portfolio' ? 'active' : '' %>">Portfolio</a>
            <a href="/achievements" class="nav-link <%= currentPath === '/achievements' ? 'active' : '' %>">Achievements</a>
            <a href="/blog" class="nav-link <%= currentPath.startsWith('/blog') ? 'active' : '' %>">Blog</a>
            <a href="/contact" class="nav-link <%= currentPath === '/contact' ? 'active' : '' %>">Contact</a>
        </nav>

        <!-- Hamburger Button -->
        <button 
            id="hamburger-btn"
            class="md:hidden relative w-10 h-10 flex flex-col justify-center items-center space-y-1 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-md"
            aria-label="Toggle navigation menu"
        >
            <span class="hamburger-line line1 block w-6 h-0.5 bg-gray-600"></span>
            <span class="hamburger-line line2 block w-6 h-0.5 bg-gray-600"></span>
            <span class="hamburger-line line3 block w-6 h-0.5 bg-gray-600"></span>
        </button>
    </div>

    <!-- Mobile Menu Overlay -->
    <div id="overlay" class="overlay fixed inset-0 bg-black/50 z-40 md:hidden"></div>

    <!-- Mobile Navigation Menu -->
    <nav id="mobile-menu" class="mobile-menu fixed top-16 right-0 h-[calc(100vh-4rem)] w-80 max-w-[85vw] bg-white shadow-xl z-50 md:hidden overflow-y-auto">
        <div class="flex flex-col p-6 space-y-1">
            <a href="/" class="menu-item mobile-nav-link <%= currentPath === '/' ? 'active' : '' %>">
                <span class="flex-1">Home</span>
            </a>
            <a href="/about" class="menu-item mobile-nav-link <%= currentPath === '/about' ? 'active' : '' %>">
                <span class="flex-1">About</span>
            </a>
            <a href="/skills" class="menu-item mobile-nav-link <%= currentPath === '/skills' ? 'active' : '' %>">
                <span class="flex-1">Skills</span>
            </a>
            <a href="/portfolio" class="menu-item mobile-nav-link <%= currentPath === '/portfolio' ? 'active' : '' %>">
                <span class="flex-1">Portfolio</span>
            </a>
            <a href="/achievements" class="menu-item mobile-nav-link <%= currentPath === '/achievements' ? 'active' : '' %>">
                <span class="flex-1">Achievements</span>
            </a>
            <a href="/blog" class="menu-item mobile-nav-link <%= currentPath.startsWith('/blog') ? 'active' : '' %>">
                <span class="flex-1">Blog</span>
            </a>
            <a href="/contact" class="menu-item mobile-nav-link <%= currentPath === '/contact' ? 'active' : '' %>">
                <span class="flex-1">Contact</span>
            </a>
            
            <!-- Contact Info in Mobile Menu -->
            <div class="mt-8 pt-6 border-t border-gray-200">
                <div class="space-y-3 text-sm text-gray-600">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-envelope w-4"></i>
                        <span>your.email@example.com</span>
                    </div>
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-phone w-4"></i>
                        <span>+1 (555) 123-4567</span>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
